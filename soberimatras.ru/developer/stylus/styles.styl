html
  font-family 'Clear Sans'
  height 100%
  body
    position relative
    min-height 100%
    min-width 950px
    main
      padding 0 0 350px

header
  height 77px
  line-height 77px
  background-color #29538A
  .wrapper
    width 930px
    line-height 77px
    padding 0 10px
    margin 0 auto
    position relative
    font-size 0
    .logotype
      position absolute
      width 117px 
      height 77px
      background url("../images/logotype.png") 0 0 no-repeat
      background-size 100% 100% 
      top 0
      left 0
      overflow hidden
      text-indent -999px
    .callback-button
      background-color #8abdff
      color #254a7a
      font-size 13px
      line-height 36px
      vertical-align middle
      display inline-block
      text-decoration none
      text-transform uppercase
      padding 0 20px
      font-weight bold   
    .phones
      display inline-block
      vertical-align middle
      font-size 16px
      line-height 18px
      height 36px
      margin-right 30px
      a
        float left
        clear left
        color #8abdff
        font-weight  700
        text-decoration none
        span
          color #FFF 
    nav
      display inline-block
      vertical-align middle
      margin 0 50px 0 170px
      a
        display inline-block
        vertical-align top
        line-height 74px
        font-size 14px
        height 74px
        padding 0 10px 
        text-decoration none
        color #fff
        text-transform uppercase
        border-bottom 3px solid #29538a
        &:hover,
        &.selected
          border-bottom 3px solid #8abdff
        
footer
  height 350px
  position absolute
  bottom 0
  left 0
  right 0
  background-color #8ABBFA
  overflow hidden
  color #FFF 
  z-index 3
  .wrapper
    width 930px
    padding 0 10px 
    margin 0 auto 
    font-size 0
    line-height 0
    .title
      text-transform uppercase
      color #FFF
      font-size 18px  
      line-height 24px
      font-weight bold
      white-space nowrap
      margin 0 0 8px 
    .sub-title
      font-size 14px
      line-height 22px
      white-space nowrap
      margin 0 0 8px 
    .contacts
      padding 63px 0 0 57px
      font-size 14px
      line-height 22px
      margin-left 23px
      overflow hidden
      height 350px
      width 209px
      display inline-block
      vertical-align top
      position relative
      pointer-events all
      background-color #29538A
      p
        padding 0 0 0 30px
        margin 8px  0
        position relative
        overflow hidden
        &.salons
          background url("../svg/p1-ico.svg") 0 0 no-repeat
          background-size auto 25px
        &.phones
          background url("../svg/p4-ico.svg") 0 0 no-repeat
          background-size auto 25px
        &.emails
          background url("../svg/p9-ico.svg") 0 0 no-repeat
          background-size auto 25px
        a
          color #FFF
          float left
          clear left 
          &:hover 
            text-decoration none
      nav.social
        padding 0
        margin 8px 0 0 
        width auto
        a
          display inline-block
          float none
          text-decoration none
          width 27px
          height 27px
          line-height 27px
          font-size 0
          color rgba(255, 255, 255, 0) 
          text-align center
          margin-left 10px
          overflow hidden
          border-radius 100%
          background-color #81B1EF
          transition background-color .25s
          background-position 50% 50% 
          background-size 27px 27px 
          &.vk
            background-image url('../images/vk.png')
            margin-left 0
          &.ok
            background-image url('../images/ok.png')
          &.gp
            background-image url('../images/gp.png')
          &.fb
            background-image url('../images/fb.png')
          &:hover
            background-color #54769C 
    nav
      vertical-align top
      position relative
      width 130px
      display inline-block
      margin-right 30px
      padding 63px 0 0
      overflow visible
      a
        display block
        float left
        clear left
        font-size 14px
        line-height 22px
        margin 7px 0 
        color #FFF
        cursor pointer
        &:hover 
          color #29538a
  &:before
    position absolute
    content "."
    bottom 0
    right 0
    width 50%
    margin-right -464px
    background-color #29538A
    height 350px
    font-size 0
    line-height 0
    text-indent -999px
    overflow hidden
    z-index 1
     

.page-navigation
  position fixed
  top 0
  bottom 0
  left 0
  height 405px
  margin auto
  z-index 1000
  a
    text-decoration none
    color #FFF 
    display block
    width 45px
    height 45px
    margin 0 0 1px
    font-weight bold
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    white-space nowrap
    overflow hidden
    pointer-events none
    transition width .25s
    &.page-1 span
      background-image url("../svg/p1-ico.svg")
    &.page-2 span
      background-image url("../svg/p2-ico.svg")
    &.page-3 span
      background-image url("../svg/p3-ico.svg")
    &.page-4 span
      background-image url("../svg/p4-ico.svg")
    &.page-5 span
      background-image url("../svg/p5-ico.svg")
    &.page-6 span
      background-image url("../svg/p6-ico.svg")
    &.page-7 span
      background-image url("../svg/p7-ico.svg")
    &.page-8 span
      background-image url("../svg/p8-ico.svg")
    &.page-9 span
      background-image url("../svg/p9-ico.svg")
    span
      pointer-events all
      background-color #8abbfa
      padding 0 20px 0 60px
      height 45px
      font-size 18px
      line-height 45px
      display inline-block
      transition background-color .25s
      background-position 0 0
      background-repeat no-repeat
      background-size 45px 45px  
      text-transform uppercase
      font-family 'Clear Sans'
    &:hover
      width 500px
      span
        background-color #29538a
        
      