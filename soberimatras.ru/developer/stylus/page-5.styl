#page-5
  height 365px
  background url("../images/bg-redial.jpg") 50% 50% no-repeat
  background-size cover 
  color #FFF
  line-height 365px
  text-align center
  .wrapper
    display inline-block
    vertical-align middle
    width 930px  
    margin-top -27px
    padding 0 10px
    line-height 18px
    .title
      font-size 36px
      line-height 72px
      font-weight bold
      text-transform uppercase
    p
      font-size 16px
      line-height 24px
      max-width 650px
      margin 0 auto
    .abstract
      &:after
        height 0
        font-size 0
        line-height 0
        display block
        margin 20px auto 0
        overflow hidden
        content ""
        border-bottom 2px solid #fff
        width 90px
    form
      margin-top 50px
      &.validate
        input:invalid
          border-color #f39c12
      button
        width 165px
        height 35px
        line-height 35px
        text-align center
        padding 0
        margin 0
        background #f39c12 
        box-shadow none  
        border-style none
        color #fff 
        text-transform uppercase
        font-size 13px
        line-height 35px
        font-weight bold
        cursor pointer
      input
        display inline-block
        border 1px solid #9db8ca
        background none
        color #FFF 
        padding 10px 15px
        margin 0 30px 0 0
        box-sahdow none
        width 273px
        height 35px
        line-height 15px
        font-size 13px
        outline none
        box-sizing border-box
        transition border-color .25s
        &::-webkit-input-placeholder
          color rgba(#fff, .5)
        &:-moz-placeholder
          color rgba(#fff, .5)
        &::-moz-placeholder
          color rgba(#fff, .5)
        &:-ms-input-placeholder
          color rgba(#fff, .5)
        &:focus
          border-color #fff